}
@section header{Cập nhật thông tin sản phẩm}
@section jsFooter{
    <script>
        $('#btnImage').click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#Image').val(url);
            };
            finder.popup();
        });
        CKEDITOR.replace('Detail')
