@model IEnumerable<MyModel.EF.Menu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{Danh sách Menu}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <p>
                    @Html.ActionLink("Thêm mới Menu", "Create")
                </p>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="userindex" class="table table-bordered table-hover table-striped text-center">
                        <thead>
                            <tr>
                                <th class="text-center">
                                    @Html.DisplayNameFor(model => model.MenuType.Name)
                                </th>
                                <th class="text-center">
                                    @Html.DisplayNameFor(model => model.Text)
                                </th>
                                <th class="text-center">
                                    @Html.DisplayNameFor(model => model.Link)
                                </th>
                                <th class="text-center">
                                    @Html.DisplayNameFor(model => model.DisplayOrder)
                                </th>
                                <th class="text-center">
                                    @Html.DisplayNameFor(model => model.Target)
                                </th>
                                <th class="text-center">
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th class="text-center">#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="Row_@item.ID">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MenuType.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Text)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Link)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DisplayOrder)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Target)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        @Html.ActionLink(" ", "Edit", new { id = item.ID },new { @class = "fa fa-edit",@title = "Sửa" }) 
                                        @Html.ActionLink(" ", "Details", new { id = item.ID }, new { @class = "fa fa-search-plus",@title = "Chi tiết" }) 
                                        @Ajax.ActionLink(" ", "Delete",new { id = item.ID },new AjaxOptions {
                                             Confirm = "Bạn có chắc chắn xóa?",
                                             OnComplete = "$('#Row_"+item.ID+"').remove()",
                                             HttpMethod = "Delete"
                                        }, new { @class = "fa fa-ban",@title = "Xóa" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

