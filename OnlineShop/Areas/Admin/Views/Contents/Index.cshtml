@model IEnumerable<MyModel.EF.Content>

@{
    ViewBag.Title = "Quản lý bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{Danh Sách Bài Viết}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <p>
                    @Html.ActionLink("Thêm mới bài viết", "Create")
                </p>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="ContentTable" class="table table-bordered table-hover table-striped text-center">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CategoryID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Image)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TopHot)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ViewCount)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="Row_@item.ID">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        <img style="width:64px;height:64px" src ="@Html.DisplayFor(modelItem => item.Image)" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TopHot)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ViewCount)
                                    </td>

                                    <td class="form-inline">
                                        <a href="/Admin/Contents/Edit/@item.ID"><i title="Sửa" class="fa fa-edit"></i></a>
                                        <a href="/Admin/Contents/Details/@item.ID"><i title="Chi tiết" class="fa fa-search-plus"></i></a>
                                        @Ajax.ActionLink(" ", "Delete", new { @id = item.ID }, new AjaxOptions
                               {
                                   Confirm = "Bạn có chắc chắn xóa bài viết này?",
                                   OnComplete = "$('#Row_" + item.ID + "').remove()",
                                   HttpMethod = "Delete"
                               }, new { @class = "fa fa-ban", @title = "Xóa" })
                                    </td>

                                </tr>
                            }
                        </tbody>                       
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
